# Configurações do Servidor
NODE_ENV=development
PORT=3000

# Configurações de Segurança
JWT_SECRET=sua_chave_secreta_muito_segura_aqui
JWT_EXPIRATION=24h
REFRESH_TOKEN_EXPIRATION=7d

# Configurações de CORS (separar múltiplas origens por vírgula)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Configurações do Banco de Dados
DB_CLIENT=mysql2
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=sua_senha_aqui
DB_NAME=recepcaotb
DB_CHARSET=utf8mb4

# Configurações de E-mail (para redefinição de senha)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=seu_email@example.com
SMTP_PASS=sua_senha_de_email
EMAIL_FROM="Sistema de Frequência <noreply@example.com>"

# Configurações de Log
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_FILE_PATH=logs/app.log

# Configurações de Backup
BACKUP_DIR=./backups
MAX_BACKUP_FILES=30

# Configurações de Upload
MAX_UPLOAD_SIZE=50mb
UPLOAD_DIR=./uploads

# Configurações de Cache
CACHE_ENABLED=true
CACHE_TTL=3600

# Configurações de Sessão
SESSION_SECRET=outra_chave_segura_aqui
SESSION_COOKIE_MAX_AGE=86400000 # 24 horas em milissegundos

# Configurações de Segurança Adicionais
RATE_LIMIT_WINDOW_MS=900000 # 15 minutos em milissegundos
RATE_LIMIT_MAX=100 # Número máximo de requisições por janela

# Configurações de Proxy (se estiver atrás de um proxy reverso como Nginx)
TRUST_PROXY=loopback,linklocal,uniquelocal

# Configurações de Depuração
DEBUG=false
DEBUG_DB_QUERIES=false

# Configurações de Manutenção
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=O sistema está em manutenção. Por favor, tente novamente mais tarde.

# Configurações de Fuso Horário
TZ=America/Sao_Paulo
